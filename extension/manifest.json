{
  "manifest_version": 2,
  "name": "X-Console translator",
  "version": "1.0",
  "description": "Translates messages in the X-Console Discord.",
  "icons": {
    "128": "xconsoles-128.png",
    "16": "xconsoles-16.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "translator.js",
      "background.js"
    ]
  },
  "permissions": [
    "https://discord.com/channels/*",
    "tabs",
    "contextMenus"
  ]
}
